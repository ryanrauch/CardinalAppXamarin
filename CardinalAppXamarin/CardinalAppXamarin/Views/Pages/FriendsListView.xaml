<?xml version="1.0" encoding="utf-8" ?>
<local:FriendsListViewBase xmlns="http://xamarin.com/schemas/2014/forms"
                           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                           xmlns:local="clr-namespace:CardinalAppXamarin.Views.Pages"
                           xmlns:exs="clr-namespace:CardinalAppXamarin.Extensions"
                           x:Class="CardinalAppXamarin.Views.Pages.FriendsListView">
    <ContentPage.Content>
        <Grid Style="{StaticResource GridContentPageStyle}">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!--Start of header section-->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="52"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <Image Grid.Column="0"
                           Grid.Row="0"
                           Grid.RowSpan="3"
                           Margin="0,5,0,0"
                           Aspect="AspectFit"
                           Source="{exs:ImageResource CardinalAppXamarin.Images.cardinalheader207x238.png}"/>
                <Label Grid.Column="1"
                       Grid.ColumnSpan="2"
                       Grid.Row="1"
                       Margin="10,0,0,0"
                       Text="{Binding TitleText}"
                       HorizontalTextAlignment="Start"
                       VerticalTextAlignment="End"
                       TextColor="{StaticResource CardinalTitleColor}"
                       FontSize="{StaticResource HugeSize}"/>
                <Button Grid.Column="1"
                        Grid.Row="2"
                        Style="{StaticResource CardinalHeaderFontAwesomeButtonStyle}"
                        Margin="10,0,0,0"
                        Text="&#xf3e5;"
                        IsVisible="{Binding BackButtonVisible}"
                        Command="{Binding BackButtonCommand}"/>
                <Label Grid.Column="2"
                       Grid.Row="2"
                       Margin="10,0,0,0"
                       Text="{Binding SubtitleText}"
                       HorizontalTextAlignment="Start"
                       VerticalTextAlignment="Start"
                       TextColor="{StaticResource CardinalSubtitleColor}"
                       FontSize="{StaticResource ExtraBigSize}"/>
            </Grid>
            <!--End of header section-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <!--<RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>-->
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0"
                             Orientation="Horizontal">
                    <Entry HorizontalOptions="StartAndExpand" 
                           Text="{Binding SearchEntry}"/>
                    <Button HorizontalOptions="End"
                            Style="{StaticResource CardinalHeaderFontAwesomeButtonStyle}"
                            Text="SEARCH"
                            Command="{Binding SearchCommand}"/>
                </StackLayout>
                <ListView Grid.Row="1"
                          HasUnevenRows="False"
                          RowHeight="35"
                          ItemsSource="{Binding PendingFriends}">
                    <ListView.Header>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Pending Requests"
                                   HorizontalTextAlignment="Center"
                                   FontSize="{StaticResource MidMediumSize}"
                                   TextColor="{StaticResource CardinalPrimaryFontForegroundColor}"/>
                        </StackLayout>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Margin="0,5,0,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="15"/>
                                        <RowDefinition Height="10"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Row="0"
                                           Grid.Column="0"
                                           Text="{Binding FirstAndLastName}"
                                           FontFamily="Calibri"
                                           HorizontalTextAlignment="Start"
                                           TextColor="{StaticResource CardinalTitleColor}"
                                           FontSize="{StaticResource LittleSize}"/>
                                    <Label Grid.Row="1"
                                           Grid.Column="0"
                                           Text="{Binding UserName}"
                                           FontFamily="Calibri"
                                           HorizontalTextAlignment="Start"
                                           TextColor="{StaticResource CardinalSubtitleColor}"
                                           FontSize="{StaticResource LittlerSize}"/>
                                    <Label Grid.Row="0"
                                           Grid.RowSpan="2"
                                           Grid.Column="1"
                                           Margin="0,0,30,0"
                                           Text="{Binding FormattedPhoneNumber}"
                                           FontFamily="Calibri"
                                           HorizontalTextAlignment="End"
                                           VerticalTextAlignment="Center"
                                           TextColor="{StaticResource CardinalSubtitleColor}"
                                           FontSize="{StaticResource LittleSize}"/>
                                    <Button Grid.Row="0"
                                            Grid.RowSpan="2"
                                            Grid.Column="2"
                                            Style="{StaticResource CardinalHeaderFontAwesomeButtonStyle}"
                                            Text="&#xf234;"/>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!--<ListView Grid.Row="2"
                          HasUnevenRows="True"
                          ItemsSource="{Binding MutualFriends}">
                    <ListView.Header>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Mutual Friends"
                                   TextColor="{StaticResource CardinalPrimaryFontForegroundColor}"/>
                        </StackLayout>
                    </ListView.Header>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding UserName}"/>
                                        <Label Text="{Binding PhoneNumber}"/>
                                    </StackLayout>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <ListView Grid.Row="3"
                          HasUnevenRows="True"
                          ItemsSource="{Binding InitiatedRequestFriends}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <ViewCell.View>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="{Binding UserName}"/>
                                        <Label Text="{Binding PhoneNumber}"/>
                                    </StackLayout>
                                </ViewCell.View>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>-->
                <StackLayout Grid.Row="2"
                             Orientation="Horizontal">
                    <Button Text="Import Contacts"
                            Command="{Binding ImportContactsCommand}"/>
                </StackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>
</local:FriendsListViewBase>